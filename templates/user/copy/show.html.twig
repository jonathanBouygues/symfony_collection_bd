    </table>
    
    <div class="d-flex">
        <a class="btn btn-primary" href="{{ path('copy_index') }}">Retour</a>

        <a class="btn btn-primary" href="{{ path('copy_edit', {'id': copy.id}) }}">Modifier</a>

        {{ include('user/copy/_delete_form.html.twig') }}
