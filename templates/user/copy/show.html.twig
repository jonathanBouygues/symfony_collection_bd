<main>
    <h1>Détail de l'enregistrement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ copy.id }}</td>
            </tr>
            <tr>
                <th>Purchase_date</th>
                <td>{{ copy.purchaseDate ? copy.purchaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ copy.price }}</td>
