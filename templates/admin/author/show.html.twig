{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
<main>
    <h1>Author</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ author.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ author.lastname }}</td>
            </tr>
            <tr>
                <th>Surnom</th>
                <td>{{ author.nickname }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ author.createdDate ? author.createdDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('admin') }}">Retour </a>

    <a class="btn btn-primary" href="{{ path('author_edit', {'id': author.id}) }}">Modifier</a>

    {{ include('admin/author/_delete_form.html.twig') }}
</main>
{% endblock %}
