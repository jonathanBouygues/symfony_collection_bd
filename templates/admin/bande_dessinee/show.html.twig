{% extends 'base.html.twig' %}

{% block title %}BandeDessinee{% endblock %}

{% block body %}
<main>
    <h1>Bande dessinée</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bande_dessinee.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ bande_dessinee.name }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ bande_dessinee.createdDate ? bande_dessinee.createdDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('/uploads/'~bande_dessinee.image)}}" alt="image" width="50" height="100"></td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary m-2" href="{{ path('change_image') }}">Changer l\'image</a>

    <div class="d-flex">
        <a class="btn btn-primary m-2" href="{{ path('admin') }}">Retour </a>

        <a class="btn btn-primary m-2" href="{{ path('bande_dessinee_edit', {'id': bande_dessinee.id}) }}">Modifier</a>

        {{ include('admin/bande_dessinee/_delete_form.html.twig') }}
    </div>
</main>
{% endblock %}
