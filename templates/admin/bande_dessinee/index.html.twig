<div id="containerAdmin" class="containerBd">
    <h1 class="m-4">Bande dessinée</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Nom</th>
                <th>Créé le</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for bande_dessinee in bande_dessinees %}
            <tr>
                <td><img src="{{ asset('/uploads/'~bande_dessinee.image)}}" alt="image" width="50" height="100"></td>
                <td>{{ bande_dessinee.name }}</td>
                <td>{{ bande_dessinee.createdDate ? bande_dessinee.createdDate|date('Y-m-d') : '' }}</td>
                <td class="container">
                    <a class="col-5 btn btn-primary btn-sm text-light" href="{{ path('bande_dessinee_show', {'id': bande_dessinee.id}) }}">Détail</a>
                    <a class="col-5 btn btn-primary btn-sm text-light" href="{{ path('bande_dessinee_edit', {'id': bande_dessinee.id}) }}">Modifier</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvé</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bande_dessinee_new') }}">Créer une nouvelle entrée</a>
</div>